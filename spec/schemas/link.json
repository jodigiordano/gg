{
  "$id": "https://dataflows.io/link.json",
  "description": "A link",
  "type": "object",
  "required": ["name", "a", "b"],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9_-]+$",
      "title": "The name of the link",
      "description": "Must be unique across the system"
    },
    "displayName": {
      "type": "string",
      "title": "The display name of the link",
      "description": "Has precedence over the name of the link"
    },
    "description": {
      "type": "string",
      "title": "The description of the link",
      "description": "In markdown format"
    },
    "a": {
      "type": "string",
      "title": "Side A of the link"
    },
    "b": {
      "type": "string",
      "title": "Side B of the link"
    }
  }
}
