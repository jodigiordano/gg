{
  "$id": "https://dataflows.io/flow.json",
  "title": "Flow",
  "description": "A flow",
  "type": "object",
  "required": ["steps"],
  "additionalProperties": false,
  "properties": {
    "title": {
      "type": "string",
      "description": "The title of the flow."
    },
    "description": {
      "type": "string",
      "description": "The description of the flow, in markdown format."
    },
    "steps": {
      "type": "array",
      "description": "The steps of the flow.",
      "items": {
        "title": "FlowStep",
        "type": "object",
        "required": ["from", "to", "keyframe"],
        "additionalProperties": false,
        "properties": {
          "description": {
            "type": "string",
            "description": "The description of the step, in markdown format."
          },
          "keyframe": {
            "type": "integer",
            "minimum": 0,
            "description": "The keyframe of the step."
          },
          "from": {
            "type": "string",
            "pattern": "^[a-z0-9_-]+(\\.[a-z0-9_-]+)*$",
            "description": "Side where the data originates from. Format: subsystemId[.subsystemId]*"
          },
          "to": {
            "type": "string",
            "pattern": "^[a-z0-9_-]+(\\.[a-z0-9_-]+)*$",
            "description": "Side where the data goes to. Format: subsystemId[.subsystemId]*"
          },
          "data": {
            "type": "string",
            "description": "The data of the step."
          }
        }
      }
    }
  }
}
